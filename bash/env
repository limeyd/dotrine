# Set PATH, CDPATH, EDITOR, etc.

export TERM=xterm-256color
export EDITOR='vim'
export SVN_EDITOR=$EDITOR
PATH="~/bin/:$PATH"
PATH="~/usr/local/lib:$PATH"

export HISTCONTROL="&:ls:[bf]g:exit"
shopt -s cmdhist
shopt -s cdspell

# Virtual Wrapper Config
export WORKON_HOME=$HOME/.virtualenvs
export PIP_RESPECT_VIRTUALENV=true
export VIRTUALENV_USE_DISTRIBUTE=true
export PIP_VIRTUALENV_BASE=$WORKON_HOME


# OSX specific vars
case `uname` in
'Darwin')

#export RED5_HOME=$HOME/Projects/red5server
#export JAVA_HOME=$(/usr/libexec/java_home)

export PATH=/usr/local/bin:$PATH #brew base bin path
#export PATH=/usr/local/Cellar/python/2.7/bin:$PATH #brew python bin path

export PATH=$HOME/.rbenv/bin:$PATH #
eval "$(rbenv init - --no-rehash)"

;;
'Linux')
    if [ -f ~/.bash/linux-aliases ];
    then
        source ~/.bash/linux-aliases
    fi
;;
esac
